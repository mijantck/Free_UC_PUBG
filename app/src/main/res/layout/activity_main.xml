<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/titel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/BgColor"
        android:gravity="center"
        android:text="FREE UC P-U-B-G"
        android:textColor="#FFFEFE"
        android:textSize="30dp"
        app:fontFamily="@font/metal_mania" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_below="@id/titel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/BgColor"

        >

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/TabColor"
            app:tabBackground="@drawable/tab_backgroun"
            app:tabIndicatorColor="@color/design_default_color_on_secondary"
            app:tabSelectedTextColor="#FDFBFB" />

    </androidx.viewpager.widget.ViewPager>




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BgColor"
    android:orientation="vertical"
    tools:context=".OrderActivity">

    <androidx.cardview.widget.CardView
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6">

            <LinearLayout
                android:background="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.5">

                <TextView
                    android:background="@color/colorPrimary"
                    android:layout_marginLeft="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:gravity="center"
                    android:maxLines="1"
                    android:text=" P-U-B-G UC ORDER "
                    android:textColor="#FFFEFE"
                    android:textSize="30dp"
                    app:fontFamily="@font/metal_mania" />
            </LinearLayout>
            <LinearLayout

                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5">

                <TextView

                    android:layout_gravity="center"
                    android:id="@+id/orderNow"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#38923C"
                    android:gravity="center"
                    android:text="ORDER NOW "
                    android:textColor="#FDFDFD"
                    android:textSize="15dp"
                    app:fontFamily="@font/metal_mania" />
            </LinearLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>




    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/BgColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/ucAmu"
            android:layout_width="match_parent"
            android:text="3242342"
            android:layout_gravity="center"

            android:textSize="20dp"
            android:textColor="#000"
            android:padding="5dp"
            android:fontFamily="@font/metal_mania"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="5dp"
            android:id="@+id/uctaka"
            android:layout_width="match_parent"
            android:text="3242342"
            android:layout_gravity="center"

            android:textSize="20dp"
            android:textColor="#000"

            android:padding="5dp"
            android:fontFamily="@font/metal_mania"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:id="@+id/radioSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/radiobkash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bKash"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioRocekt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rokect" />

        </RadioGroup>
        <TextView
            android:layout_margin="5dp"
            android:id="@+id/Number"
            android:layout_width="match_parent"
            android:text="Number "

            android:textSize="20dp"
            android:textColor="#000"

            android:padding="5dp"
            android:fontFamily="@font/metal_mania"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:hint=" GAMER ID "
            android:layout_gravity="center"

            android:textSize="20dp"
            android:textColor="#000"
            android:background="#FFFF"
            android:padding="5dp"
            android:fontFamily="@font/metal_mania"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/nickName"
            android:layout_width="match_parent"
            android:hint="NiCK NAME"
            android:layout_gravity="center"

            android:textSize="20dp"
            android:textColor="#000"
            android:background="#FFFF"
            android:padding="5dp"
            android:fontFamily="@font/metal_mania"
            android:layout_height="wrap_content"/>


        <EditText
            android:layout_margin="5dp"
            android:id="@+id/transection"
            android:layout_width="match_parent"
            android:hint=" Transaction ID"
            android:layout_gravity="center"

            android:textSize="20dp"
            android:textColor="#000"
            android:background="#FFFF"
            android:padding="5dp"
            android:fontFamily="@font/metal_mania"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:hint=" Other Country Soon "
            android:layout_gravity="center"

            android:textSize="20dp"
            android:textColor="#000"
            android:background="#FFFF"
            android:padding="5dp"
            android:fontFamily="@font/metal_mania"
            android:layout_height="wrap_content"/>


    </LinearLayout>






</LinearLayout>